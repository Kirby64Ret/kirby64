#define FILLER(filetype, bank) \
    BEGIN_SEG(bank_ ## bank ##_## filetype ## _filler, 0) {\
        BYTE(0x39);\
        BYTE(0x39);\
        BYTE(0x39);\
        BYTE(0x0A);\
    }\
    END_SEG(bank_ ## bank ##_## filetype ## _filler)


