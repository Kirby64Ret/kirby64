    _bank_##bank##_misc_size = 0;\
    bank_##bank##_index_1_misc_start = __romPos;

#define GEO(bank, index) \
    START_GEO(bank, index) {\
        BUILD_DIR/assets/geo/bank_##bank/index/block.o(.data);\
    }\
